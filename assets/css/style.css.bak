/* ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~signup section css~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ */
.signup{
	padding:75px 0;
	background-color:#f0f0f0;
}
.singupheading{
	font-size:30px;
	color:#333333;
	text-align:center;
	font-weight: lighter;
}
.signupcontrol input{
	width:100%;
	border:0px;
	border-bottom:1px solid #000;
	outline:none;
	background-color:transparent;
	padding:0px 7px;
	height:30px;
}
.signupcontrol{
	position:relative;
}
.signupcontrol i{
	position:absolute;
	font-size:30px;
	color:#373735;
	top:-5px;
    right:5px;
    transform: rotate(45deg);
}

.button{
	text-align:center;
}
.btn{
	padding:20px 25px;
	cursor:pointer;
    color:#626262;
	font-size:20px;
	background-color:#fff;
	border:1px solid #626262;
	margin-bottom:70px;
}
/* ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~footer section css~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ */
.footer{
	padding:43px 0 43px;
	background-color:#f0f0f0;
}
.links li,.footer-icons li {
	list-style:none;
	display:inline-block;
	font-size:14px;
}
.footer-icons{
	text-align:right;
}
.links li a{
	display:inline-block;
	padding:8.5px;
	font-size:14px;
	color:#000;
}
.footer-icons li a{
	display:inline-block;
	padding:8.5px;
	font-size:14px;
	color:#626262;
}
.links li:first-child a{
	padding-left:0px;
}
.footer-icons li:last-child a{
	padding-right:0px;
}